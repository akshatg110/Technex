<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Supernova"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/a"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="20dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/astroquiz"/>


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/aclonica"
                android:gravity="center_horizontal"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text="Astro Quiz"
                android:textColor="@android:color/white"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="85dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:textColor="@android:color/white"
                android:text="Detailed Problem Statement"
                android:gravity="center"
                android:textSize="15dp" />

            <Button
                android:layout_marginBottom="10dp"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:text="Register"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button2"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/a"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="20dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/eti"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/aclonica"
                android:paddingLeft="13dp"
                android:paddingRight="10dp"
                android:gravity="center"
                android:text="Exploring the Intersteller"
                android:textColor="@android:color/white"
                android:textSize="22dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="85dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:textColor="@android:color/white"
                android:text="Detailed Problem Statement"
                android:gravity="center"
                android:textSize="15dp" />
            <Button
                android:layout_marginBottom="10dp"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:layout_gravity="center_horizontal"
                android:text="Register"
                android:background="@drawable/button2"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/paper_presentation"/>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/aclonica"
                android:paddingLeft="20dp"
                android:paddingRight="18dp"
                android:gravity="center"
                android:text="Paper Presentation"
                android:textColor="@android:color/white"
                android:textSize="26dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="85dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:textColor="@android:color/white"
                android:text="Detailed Problem Statement"
                android:gravity="center"
                android:textSize="15dp" />



            <Button
                android:layout_marginBottom="10dp"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:layout_gravity="center_horizontal"
                android:text="Register"
                android:background="@drawable/button2"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/atsrophotog"/>
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="18dp"
                android:text="Astrophotography"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="85dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:textColor="@android:color/white"
                android:text="Detailed Problem Statement"
                android:gravity="center"
                android:textSize="15dp" />

            <Button
                android:layout_marginBottom="10dp"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:layout_gravity="center_horizontal"
                android:text="Register"
                android:background="@drawable/button2"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="18dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/sou"/>
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/aclonica"
                android:gravity="center"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text="Scientist of Utopia"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="85dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:textColor="@android:color/white"
                android:text="Detailed Problem Statement"
                android:gravity="center"
                android:textSize="15dp" />

            <Button
                android:layout_marginBottom="10dp"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:layout_gravity="center_horizontal"
                android:text="Register"
                android:background="@drawable/button2"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>